{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ESNext",
		"strict": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"outDir": "./dist/",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": false
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}